<article class="tease tease--{{post.post_type}}" id="tease-{{post.ID}}">
	<div class="tease-container tease-container--{{post.post_type}} clearfix">
		<hgroup>
			<h3 class="tease__title"><a href="{{post.get_path}}">{{post.title}}</a></h3>
			<h4 class="tease__date">{{post.post_date|date('l, F jS Y')}}</h4>
		</hgroup>
		<div class="tease__content">
			{% if post.get_thumbnail %}
				<img src="{{ post.get_thumbnail.get_src|resize(160) }}" class="tease__thumbnail" >
			{% endif %}
			{# this is a broken implementation #}
			{{ post.get_preview(80, false, 'Read More >>', true) }}
		</div>
	</div>
</article>
