<article class="tease tease--{{post.post_type}}" id="tease-{{post.ID}}">
	<div class="tease-container tease-container--{{post.post_type}} clearfix">
		<hgroup>
			<h3 class="tease__title"><a href="{{post.get_path}}">{{post.title}}</a></h3>
			<h4 class="tease__date">{{post.post_date|date('l, F jS Y')}}</h4>
		</hgroup>
		<div class="tease__content">
			{% if post.get_thumbnail %}
				<img src="{{ post.get_thumbnail.get_src|resize(300) }}" class="tease__thumbnail" >
			{% endif %}
			{{ post.content }}
		</div>
		{% if post.ext_link %}
			{% if post.source_name %}
				<div class="tease__readmore">
					<a href="{{post.ext_link}}" target="_blank">
						<i class="icon-external-link"></i> Read the Full Story at {{post.source_name}}
					</a>
				</div>
			{% else %}
			<div class="tease__readmore">
				<a href="{{post.ext_link}}" target="_blank">
					<i class="icon-external-link"></i> Read the Full Story Here
				</a>
			</div>
			{% endif %}
		{% endif %}
	</div>
</article>
