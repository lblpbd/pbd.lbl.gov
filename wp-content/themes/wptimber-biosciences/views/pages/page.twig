{% extends 'layout/base-focused.twig' %}

{% block hero %}
	{% if page.thumbnail %}
		<div class="hero--banner col-xs-12 hidden-xs" style="background-image: url({{page.get_thumbnail.src}});">
			<div class="hero--banner__overlay"></div>
			<h1 class="page__header">{{page.title}}</h1>
		</div>
		<h1 class="page__header col-xs-12 visible-xs">{{page.title}}</h1>
	{% else %}
		<h1 class="page__header col-xs-12">{{page.title}}</h1>
	{% endif %}
{% endblock %}

{% block content %}

	<article class="col-xs-12 page__content">
		{{page.content}}
	</article>

{% endblock %}
