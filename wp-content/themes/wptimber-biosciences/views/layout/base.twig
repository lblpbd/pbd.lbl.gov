<!DOCTYPE html>
<!--[if IE 8]>         <html class="no-js lt-ie9" {{language_attributes}}> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" {{language_attributes}}> <!--<![endif]-->
<head>
	<meta charset="{{ bloginfo('charset') }}">
	<title>{{wp_title}} {{ bloginfo('name') }}</title>

	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="{{ bloginfo('description') }}">
	<meta name="author" content="Physical Biosciences">

	<link rel="profile" href="http://gmpg.org/xfn/11">
	<link rel="pingback" href="{{ bloginfo('pingback_url') }}">
	<link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:700italic,400,700' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Ubuntu:400,500' rel='stylesheet' type='text/css'>
	<!-- IE8 needs support for these things...
		background-image-sizing, border-radius, multiple-backgrounds, history, canvas, canvas text, rem
	-->
	<link rel="stylesheet" href="{{ stylesheet_uri }}" type="text/css">
	<!-- start wordpress-head -->
	{{wp_head}}
	<!-- end wordpress-head -->
	{% block html_head %}
	{% endblock %}
</head>

<body class="{{body_class}}" data-source="base">

	<header id="main_header" class="main_header" role="banner">
		{% block navigation_bar %}
			{% include "components/navbar.twig" %}
		{% endblock %}
	</header>

	{% block hero %}
	{% endblock %}

	<div class="container-wrap">
		<main role="main">
			<div class="row">
				{% block content %}
					Sorry, No Content
				{% endblock %}

				{% block sidebar %}
				{% endblock %}
			</div>
		</main>
	</div>

	{% block footer %}
		{% include "components/footer.twig" %}
	{% endblock %}

{{wp_footer}}
{% block scripts %}
{% endblock %}
</body>
</html>
