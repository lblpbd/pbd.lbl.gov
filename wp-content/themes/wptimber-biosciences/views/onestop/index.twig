{% extends 'layout/base.twig' %}

{% block html_head %}
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.3.0/base-min.css">
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.3.0/pure-min.css">
    <link rel="stylesheet" href="/wp-content/themes/wptimber-biosciences/assets/libs/onestop.css">
    <link rel="stylesheet" href="/wp-content/themes/wptimber-biosciences/assets/libs/effeckt-captions.css">
{% endblock %}

{% block content %}
    <div id="onestop">
        <h3>Onestop</h3>
        <div id="sections">
                {% for item in page.get_children %}
                <a href="{{item.link}}" class="onestop-link">
                    <div class="onestop-section">
                        <figure class="effeckt-caption" data-effeckt-type="cover-fade">
                            <div class="onestop-element-real">
                                <img src="{{TimberImage(item.get_field('image')).src}}" alt="">
                                <figcaption>
                                    <div class="effeckt-figcaption-wrap">
                                        {{item.description}}
                                    </div>
                                </figcaption>
                            </div>
                        </figure>
                        <p>{{item.title}}</p>
                    </div>
                </a>
                {% endfor %}
                <div style="clear:both"></div>
        </div>
        {{debug_info}}
    </div>

{% endblock %}